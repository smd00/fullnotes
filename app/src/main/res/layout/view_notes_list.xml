<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/activatedBackgroundIndicator" >

    <TextView
        android:id="@+id/view_notes_list_title"
        android:text="noteTitle"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:width="100dip"
        android:textSize="16sp"
        android:textStyle="bold"
        android:focusable="false"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal|bottom|left|right|top"
        android:descendantFocusability="blocksDescendants">
        <TextView
            android:id="@+id/view_notes_list_created"
            android:text="noteCreated"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:gravity="start"
            />

        <TextView
            android:id="@+id/view_notes_list_location"
            android:text="noteLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:layout_weight="0"
            android:ellipsize="end"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:gravity="end" />
    </LinearLayout>

    <TextView
        android:id="@+id/view_notes_list_text"
        android:text="noteText"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:width="100dip"
        android:textSize="16sp"
        android:textStyle="bold"
        android:focusable="false"
        />


</LinearLayout>