<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/darkBlue</item>
        <item name="colorAccent">@color/orange</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--ScrollView-->
    <style name="scrollView_view">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--New Note ScrollView-->
    <style name="scrollView_new_note">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!--LinearLayout (normal)-->
    <style name="linearLayout_view">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--Main LinearLayout (full size)-->
    <style name="linearLayout_view_main">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--Demo buttons LinearLayout (only top margin)-->
    <style name="linearLayout_demos_view">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <!--LinearLayout (with 4 Margins)-->
    <style name="linearLayout_view_margin">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/view_marginTop</item>
        <item name="android:layout_marginBottom">@dimen/view_marginBottom</item>
        <item name="android:layout_marginEnd">@dimen/view_marginEnd</item>
        <item name="android:layout_marginStart">@dimen/view_marginStart</item>
    </style>

    <!--Header TextView-->
    <style name="textView_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <!--Footer TextView-->
    <style name="textView_footer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">-50dp</item>
        <item name="android:text">@string/footer</item>
    </style>

    <!--Button Info TextView-->
    <style name="textView_info">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--Button-->
    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <!--<item name="android:textColor">@color/colorPrimary</item>-->
    </style>

    <!--Save New Note Button-->
    <style name="button_save_new_note">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Home Screen button-->
    <style name="button_home_screen">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">20sp</item>
        <!--<item name="android:textColor">@color/colorPrimary</item>-->
    </style>

    <!--New Note Screen button-->
    <style name="image_button_new_note_screen">
        <item name="android:layout_width">54dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/invisible</item>
        <!--<item name="android:textColor">@color/colorPrimary</item>-->
    </style>

</resources>
